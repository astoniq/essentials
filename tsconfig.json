{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "useDefineForClassFields": false,
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "outDir": "lib",
    "baseUrl": "./src",
    "declaration": true,
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "src"
  ]
}